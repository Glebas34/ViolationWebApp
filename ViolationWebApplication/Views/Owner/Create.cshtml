@{
}
@using ViolationWebApplication.ViewModels
@model ViewModelOwner
<form asp-action="Add" asp-controller="Owner" method="post">
    <div class="form-group">
        <label asp-for="DriversLicense">Номер водительских прав</label>
        <input asp-for="DriversLicense" class="form-control" placeholder="Введите номер водительских прав">
    </div>
    <div class="form-group">
        <label asp-for="LastName">Фамилия</label>
        <input asp-for="LastName" class="form-control" placeholder="Введите фамилию">
    </div>
    <div class="form-group">
        <label asp-for="FirstName">Имя</label>
        <input asp-for="FirstName" class="form-control" placeholder="Введите имя">
    </div>
    <div class="form-group">
        <label asp-for="Patronymic">Отчество</label>
        <input asp-for="Patronymic" class="form-control" placeholder="Введите отчество">
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>