@{
}
@using ViolationWebApplication.ViewModels
@model ViewModelCar
<form asp-action="AddCar" asp-controller="Violation" method="post">
    <div class="form-group">
        <label asp-for="Manufacturer">Производитель</label>
        <input asp-for="Manufacturer" class="form-control" placeholder="Введите производителя">
        <span asp-validation-for="Manufacturer" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Model">Модель</label>
        <input asp-for="Model" class="form-control" placeholder="Введите модель">
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DriversLicense">Номер водительских прав</label>
        <input asp-for="DriversLicense" class="form-control" placeholder="Введите номер водительских прав">
         <span asp-validation-for="DriversLicense" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>