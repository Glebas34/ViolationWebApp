@{
}
@using ViolationWebApplication.ViewModels
@model ViewModelOwner
<form asp-action="AddOwner" asp-controller="Violation" method="post">
    <div class="form-group">
        <label asp-for="LastName">Фамилия</label>
        <input asp-for="LastName" class="form-control" placeholder="Введите фамилию">
         <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FirstName">Имя</label>
        <input asp-for="FirstName" class="form-control" placeholder="Введите имя">
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Patronymic">Отчество</label>
        <input asp-for="Patronymic" class="form-control" placeholder="Введите отчество">
        <span asp-validation-for="Patronymic" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
        <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="Index">Отменить</a>
    </div>
</form>