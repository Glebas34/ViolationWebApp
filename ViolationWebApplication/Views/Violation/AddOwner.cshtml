@using ViolationWebApplication.ViewModels
@model ViewModelOwner

@{
    ViewData["Tittle"] = "Добавление владельца";
}

<form asp-action="AddOwner" asp-controller="Violation" method="post">
    <div class="form-group">
        <label asp-for="LastName">Фамилия</label>
        <input asp-for="LastName" class="form-control w-50" placeholder="Введите фамилию">
         <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FirstName">Имя</label>
        <input asp-for="FirstName" class="form-control w-50" placeholder="Введите имя">
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Patronymic">Отчество</label>
        <input asp-for="Patronymic" class="form-control w-50" placeholder="Введите отчество">
        <span asp-validation-for="Patronymic" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Отправить</button>
        <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="Index">Отменить</a>
    </div>
</form>